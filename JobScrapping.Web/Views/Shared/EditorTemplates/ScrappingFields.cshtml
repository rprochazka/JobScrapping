@model IList<JobScrapping.Web.ViewModels.ScrappingFieldViewModel>

@{
    ViewBag.Title = "Scrapping Fields Edit";
}

@for(int i = 0; i < Model.Count; i++)
{
    <div class="editor-label">
        @Html.LabelFor(model => Model[i].FieldValue, Model[i].FieldName)
    </div>
    <div class="editor-field">
        @Html.HiddenFor(model => Model[i].FieldId)
        @Html.EditorFor(model => Model[i].FieldValue)
        @Html.ValidationMessageFor(model => Model[i].FieldValue)
    </div>                        
}                




@model JobScrapping.Web.ViewModels.CreateScrappingViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div>
    <a href="@Model.Site.SiteUrl">Go to the site to scrape</a>
</div>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Scrapping Definition Entry</legend>                                        
        
        @Html.EditorFor(model=>model.ScrappingFields, "ScrappingFields")
        
        @Html.HiddenFor(model=> model.Site.SiteId)
        @Html.HiddenFor(model=>model.UserId)                
    
    
        <p>
            <input type="submit" value="Create" />
        </p>
        
     </fieldset>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
